<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/image_staff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".item_grid"
    android:padding="10dp">


    <RelativeLayout
        android:id="@+id/buttins"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Новый сотрудник"
            android:textAlignment="center"
            android:textSize="24sp" />
        <ImageButton
            android:visibility="invisible"
            android:layout_alignParentEnd="true"
            android:id="@+id/btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:layout_below="@id/textView4"
            android:onClick="UpdateItemDialog"

            app:srcCompat="@android:drawable/ic_menu_save" />

        <ImageButton
            android:visibility="invisible"
            android:layout_alignParentStart="true"
            android:id="@+id/btn_to_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="@string/app_name"
            android:layout_below="@id/textView4"
            android:onClick="btn_onclick_back_main"

            app:srcCompat="@android:drawable/ic_media_rew" />


    </RelativeLayout>

    <RelativeLayout
        android:layout_below="@id/buttins"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <ImageView
            android:id="@+id/imageavt"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_alignParentTop="true"
            android:layout_centerInParent="true"
            android:background="@drawable/input_text"
            android:maxWidth="100dp"
            android:maxHeight="100dp"
            android:onClick="ImageClick"
            android:padding="7dp"
            tools:srcCompat="@tools:sample/avatars" />
        <TextView
            android:id="@+id/name_v"
            android:paddingLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/imageavt"
            android:text="ФИО"/>

        <EditText
            android:id="@+id/name"
            android:layout_below="@id/name_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingBottom="5dp"
            android:hint="Иванов Иван Иванович"
            android:paddingTop="5dp"
            android:layout_marginBottom="20dp"
            android:textSize="16sp"
            android:background="@drawable/input_text" />
        <TextView
            android:id="@+id/phone_v"
            android:paddingLeft="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/name"
            android:text="Номер телефона"/>

        <EditText

            android:id="@+id/phone"
            android:layout_below="@id/phone_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:hint="+7 999 999 99 99"
            android:layout_marginBottom="20dp"
            android:textSize="16sp"
            android:background="@drawable/input_text"
            app:layout_constraintBottom_toTopOf="@+id/email"
            app:layout_constraintTop_toBottomOf="@+id/name" />
        <TextView
            android:id="@+id/email_v"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:layout_below="@id/phone"
            android:text="Электронная почта"/>

        <EditText
            android:id="@+id/email"
            android:layout_below="@id/email_v"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingLeft="12dp"
            android:hint="ivaniv@mail.ru"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:layout_marginBottom="20dp"
            android:textSize="16sp"
            android:background="@drawable/input_text"
            app:layout_constraintTop_toBottomOf="@+id/phone" />
    </RelativeLayout>

</RelativeLayout>