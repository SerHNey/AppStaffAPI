<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".edit_itemm">

    <ImageView
        android:id="@+id/imageGa"
        android:layout_alignParentTop="true"
        android:layout_centerInParent="true"
        android:layout_width="150dp"
        android:layout_marginTop="100dp"
        android:src="@drawable/ic_baseline_person_add_24"
        android:layout_height="150dp"/>

    <ImageButton
        android:id="@+id/btn_addnew_game"
        android:src="@drawable/ic_baseline_person_add_24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"/>

    <TextView
        android:id="@+id/title_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Заголовок"
        android:layout_below="@id/imageGa"
        android:layout_toEndOf="@id/imageGa"/>

    <EditText
        android:id="@+id/txt_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageGa"
        android:layout_below="@id/title_title"/>

    <TextView
        android:id="@+id/title_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Цена"
        android:layout_toEndOf="@id/imageGa"
        android:layout_below="@id/txt_title"/>

    <EditText
        android:id="@+id/txt_cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageGa"
        android:layout_below="@id/title_cost"/>

    <TextView
        android:id="@+id/title_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Stock"
        android:layout_toEndOf="@id/imageGa"
        android:layout_below="@id/txt_cost"/>

    <EditText
        android:id="@+id/txt_stock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageGa"
        android:layout_below="@id/title_stock"/>

    <TextView
        android:id="@+id/title_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Store"
        android:layout_toEndOf="@id/imageGa"
        android:layout_below="@id/txt_stock"/>

    <EditText
        android:id="@+id/txt_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageGa"
        android:layout_below="@id/title_store"/>

    <TextView
        android:id="@+id/title_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Description"
        android:layout_toEndOf="@id/imageGa"
        android:layout_below="@id/txt_store"/>

    <EditText
        android:id="@+id/txt_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageGa"
        android:layout_below="@id/title_description"/>

    <TextView
        android:id="@+id/title_rewiews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rewiews"
        android:layout_toEndOf="@id/imageGa"
        android:layout_below="@id/txt_description"/>

    <EditText
        android:id="@+id/txt_rewiews"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toEndOf="@id/imageGa"
        android:layout_below="@id/title_rewiews"/>

</RelativeLayout>